<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
     <mapper namespace="com.springlec.springAscent.dao.RDaoReview">
    	<select id="list" resultType="com.springlec.springAscent.dto.RDtoReview">
    		SELECT REVIEWCODE, REVIEWTITLE, REVIEWCONTENT, REVIEWIMAGE FROM REVIEW  
    	</select>
    	<insert id="write">
    		INSERT INTO REVIEW (REVIEWTITLE, REVIEWCONTENT, REVIEWIMAGE, USER_USERID) 
    		VALUES (#{param1},#{param2},#{param3},'JUNGEUN')
    	</insert>
    		<select id="content" resultType="com.springlec.springAscent.dto.RDtoReview">
    		SELECT * FROM REVIEW WHERE REVIEWCODE = #{param1} 
    	</select>
    	
    	
    	
    </mapper>